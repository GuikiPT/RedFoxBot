# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Bot Owner Configuration
BOT_OWNER_IDS=your_user_id_here,another_user_id_here
OWNER_GUILD_IDS=your_guild_id_here,another_guild_id_here

# Logging Configuration
LOG_TO_FILE=true

# Database Configuration
SQLITE_PATH=database.sqlite

# Optional: MariaDB Configuration (if using MariaDB instead of SQLite)
# MARIADB_HOST=localhost
# MARIADB_PORT=3306
# MARIADB_DB=redfoxbot
# MARIADB_USER=your_db_user
# MARIADB_PASSWORD=your_db_password

# Starboard Configuration
# Enable or disable screenshot generation for starboard messages
STARBOARD_SCREENSHOTS_ENABLED=true

# Optional: API endpoint for generating message screenshots
# Example: http://localhost:3000 (for local development)
# This should be the base URL of your message screenshot service
# If not set, screenshots will be generated using local Playwright rendering
# STARBOARD_API_ENDPOINT=http://localhost:3000
